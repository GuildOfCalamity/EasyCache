<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;net4.8.1</TargetFrameworks>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <Version>2.0.0.3</Version>
    <FileVersion>2.0.0.3</FileVersion>
    <AssemblyVersion>2.0.0.3</AssemblyVersion>
    <PackageId>EasyCache2025</PackageId>
    <ProductName>EasyCache</ProductName>
    <Authors>The Guild</Authors>
    <Title>EasyCache</Title>
    <PackageDescription>A time-based object-caching helper library for your projects.</PackageDescription>
    <RepositoryUrl>https://github.com/GuildOfCalamity/EasyCache</RepositoryUrl>
    <AppendTargetFrameworkToOutputPath>true</AppendTargetFrameworkToOutputPath>
    <AppendRuntimeIdentifierToOutputPath>true</AppendRuntimeIdentifierToOutputPath>
    <OptimizeImplicitlyTriggeredBuild>true</OptimizeImplicitlyTriggeredBuild>
    <Description>A time-based object-caching helper library for your projects.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.Caching" Version="8.0.1" />
  </ItemGroup>

</Project>
